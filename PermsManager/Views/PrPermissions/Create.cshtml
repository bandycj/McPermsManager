@model PermsManager.Models.PrPermission
@{
    ViewBag.Title = "Create";
}
<h2>
    Create</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>PrPermission</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.permstring)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.permstring)
            @Html.ValidationMessageFor(model => model.permstring)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.entryid, "PrEntry")
        </div>
        <div class="editor-field">
            @if (ViewBag.prentry == null)
            {
                @Html.DropDownList("entryid", String.Empty)
                @Html.ValidationMessageFor(model => model.entryid)
            }
            else
            {
                <input type="text" disabled="disabled" value="@ViewBag.prentry.name"  />
                <input type="hidden" id="entryid" value="@ViewBag.prentry.entryid" />
            }
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
